.container{
  width: 100%;
  height: 100%;
  padding: 0;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.searchBar{
  width: 70%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  margin: 25rpx 10rpx 10rpx 10rpx;
  background: #eee;
}
image{
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 0 0 10rpx;
}
input{
  width: 70%;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #666;
}
button{
  height: 60rpx;
  margin-top: 25rpx;
  background: #feb70f;
}
.searchContent{
  width: 100%;
  height:300rpx;
  margin: 10rpx 20rpx;
  border-bottom: 1px dotted #ccc;
}
.hot{
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  height: 50rpx;
  text-align: left;
}
.content{
  margin:10rpx 5rpx;
  text-align: center;
  border: 1px solid;
  border-radius: 10rpx;
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background: #eee;
  flex-wrap: wrap;
  float: left;
}
.searchRecent{
  width: 100%;
  height: 300rpx;
}
.recent{
  font-size: 32rpx;
  font-weight: bold;
  text-align: left;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.recentItem{
  width: 100%;
  font-size: 28rpx;
}
.recentCon{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
  margin: 5rpx;
}